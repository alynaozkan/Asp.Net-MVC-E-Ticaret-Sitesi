<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Ticaret Sitesi</title>
    <link rel="icon" href="~/Content/image.ico" type="image/x-icon">

    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">

    <!-- Add Bootstrap JavaScript (Popper.js is required for dropdowns) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: #062925 !important;">
        <div class="container">
            <a class="navbar-brand" href="https://localhost:44351/Home/Index">Ana Sayfa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kategori/Gul">Güller</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kategori/Mixed">Karışık Çiçekler</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kategori/Lale">Laleler</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kategori/Orkide">Orkideler</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Urunler/Index">Tüm Ürünler</a></li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kisiler/Register">Üye Ol</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://localhost:44351/Kisiler/Login">Giriş Yap</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="data:image/png;base64," alt="User Icon" class="user-icon">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="https://localhost:44351/Kisiler/Hesap">Hesap</a>
                            <a class="dropdown-item" href="https://localhost:44351/Adresler/Index">Adresler</a>
                            <a class="dropdown-item" href="https://localhost:44351/Sepet/Index">Sepetim</a>
                            <a class="dropdown-item" href="https://localhost:44351/Siparisler/Index">Siparişler</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tüm Hakları Saklıdır.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
