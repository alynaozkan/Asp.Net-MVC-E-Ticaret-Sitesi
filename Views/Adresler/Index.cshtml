@model IEnumerable<FSWEBAPP.Models.Adresler>

@{
    ViewBag.Title = "Index";
}

<h2>Kayıtlı Adreslerim</h2>

<p>
    @Html.ActionLink("Yeni Adres Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdresTanim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kisiler.Ad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdresTanim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kisiler.Ad)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.AdresID }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.AdresID }) |
            @Html.ActionLink("Adresi Sil", "Delete", new { id=item.AdresID })
        </td>
    </tr>
}

</table>
